<?xml version="1.0" encoding="utf-8"?>

<com.yongyida.robot.navigation.view.swipe.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="播放"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/media_type_snr"
            android:layout_width="88dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


        <Spinner
            android:id="@+id/media_snr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/media_type_snr"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/media_type_snr"
            app:layout_constraintTop_toTopOf="@+id/media_type_snr" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放"
            app:layout_constraintBottom_toBottomOf="@+id/media_snr"
            app:layout_constraintEnd_toStartOf="@+id/times_ett"
            app:layout_constraintTop_toTopOf="@+id/media_snr" />

        <EditText
            android:id="@+id/times_ett"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:text="100"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="次"
            app:layout_constraintBottom_toBottomOf="@+id/times_ett"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/times_ett" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="删除" />
    </LinearLayout>


</com.yongyida.robot.navigation.view.swipe.SwipeItemLayout>